<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root">
    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="STUDENT INFORMATION"
                android:textColor="@color/lavender"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputName"
                android:textColorHint="@color/lavender"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="58.50dp"
                android:layout_marginTop="26.00dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Name"
                android:background="@drawable/border"
                android:paddingStart="39.00dp"
                android:paddingEnd="78.00dp"
                android:paddingTop="1.30dp"
                android:textColor="@color/black"
                android:textSize="22.10dp"
                tools:ignore="TextSizeCheck" />
            <EditText
                android:id="@+id/inputrno"
                android:textColorHint="@color/lavender"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="58.50dp"
                android:layout_marginTop="26.00dp"
                android:hint="Roll No"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:paddingStart="39.00dp"
                android:paddingEnd="78.00dp"
                android:paddingTop="1.30dp"
                android:textColor="@color/black"
                android:textSize="22.10dp"
                tools:ignore="TextSizeCheck" />
            <EditText
                android:id="@+id/inputenroll"
                android:textColorHint="@color/lavender"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="58.50dp"
                android:layout_marginTop="26.00dp"
                android:hint="Enrolment No"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:paddingStart="39.00dp"
                android:paddingEnd="78.00dp"
                android:paddingTop="1.30dp"
                android:textColor="@color/black"
                android:textSize="22.10dp"
                tools:ignore="TextSizeCheck" />
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="18sp"
                android:minHeight="48dp"
                android:text="Choose Photos"
                android:textSize="22sp"
                app:cornerRadius = "30dp"/>
            <androidx.cardview.widget.CardView

                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/profileimage"
                app:cardCornerRadius="90dp"
                android:textAlignment="center"
                android:layout_marginStart="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tooltipText="Add Profile Photo"
                android:background="@color/black"
                android:paddingTop="1.30dp"
                android:layout_marginTop="30.30dp"
                >

                <androidx.cardview.widget.CardView
                    :layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back1" />

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnadd"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="28.60dp"
                android:paddingEnd="20.80dp"
                android:shadowColor="@color/white"
                android:text="@string/add_student"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="285dp"
                />


        </LinearLayout>

    </ScrollView>
</layout>
